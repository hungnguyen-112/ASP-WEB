@model HopDong
<div class="container">
    <h3>Chỉnh sửa thông tin hợp đồng</h3>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <!-- Mã hợp đồng -->
        <div class="form-group">
            <label asp-for="ContractId">Mã hợp đồng</label>
            <input asp-for="ContractId" type="text" class="form-control" />
            <span asp-validation-for="ContractId" class="text-danger"></span>
        </div>

        <!-- Tên hợp đồng -->
        <div class="form-group">
            <label asp-for="ContractName">Tên hợp đồng</label>
            <input asp-for="ContractName" type="text" class="form-control" />
            <span asp-validation-for="ContractName" class="text-danger"></span>
        </div>

        <!-- Ngày ký kết -->
        <div class="form-group">
            <label asp-for="SigningDate">Ngày ký kết</label>
            <input asp-for="SigningDate" type="date" class="form-control" />
            <span asp-validation-for="SigningDate" class="text-danger"></span>
        </div>

        <!-- Khách hàng -->
        <div class="form-group">
            <label asp-for="Customer">Khách hàng</label>
            <input asp-for="Customer" type="text" class="form-control" />
            <span asp-validation-for="Customer" class="text-danger"></span>
        </div>

        <!-- Giá trị hợp đồng -->
        <div class="form-group">
            <label asp-for="ContractValue">Giá trị hợp đồng</label>
            <input asp-for="ContractValue" type="number" class="form-control" step="0.01" />
            <span asp-validation-for="ContractValue" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}